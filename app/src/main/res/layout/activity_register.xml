<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E1F0F1"
    tools:context=".RegisterActivity">

    <include
        android:id="@+id/appBarLayout"
        layout="@layout/app_bar" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:id="@+id/card_plano"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="#D3D3D3"
                app:cardCornerRadius="8dp"
                app:cardElevation="2dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="PLANO CADASTRADO"
                        android:textStyle="bold"
                        android:textSize="20sp"
                        android:textColor="@android:color/black"
                        android:layout_marginBottom="20dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Trabalho Presencial:"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:textColor="@android:color/black"
                        android:layout_marginBottom="4dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Monday, Tuesday, Wednesday"
                        android:textSize="18sp"
                        android:textColor="@android:color/black"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="19h - 19h"
                        android:textSize="18sp"
                        android:textColor="@android:color/black"
                        android:layout_marginBottom="20dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Trabalho Remoto:"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:textColor="@android:color/black"
                        android:layout_marginBottom="4dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Friday, Thursday, Saturday"
                        android:textSize="18sp"
                        android:textColor="@android:color/black"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="20h - 19h"
                        android:textSize="18sp"
                        android:textColor="@android:color/black"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>


            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_registrar_ponto"
                style="@style/Widget.MaterialComponents.Button.Icon"
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:text="Registrar Ponto"
                android:textAllCaps="false"
                android:textSize="18sp"
                android:lines="2"
                android:textAlignment="viewStart"
                android:paddingStart="32dp"
                android:textColor="@android:color/white"
                app:icon="@drawable/ic_clock_white"
                app:iconTint="@android:color/white"
                app:iconSize="28dp"
                app:iconPadding="24dp"
                app:iconGravity="textStart"
                android:backgroundTint="#009688"
                app:cornerRadius="10dp"
                app:elevation="6dp"
                app:layout_constraintTop_toBottomOf="@id/card_plano"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="48dp"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_registrar_ocorrencia"
                style="@style/Widget.MaterialComponents.Button.Icon"
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:text="Registrar OcorrÃªncia"
                android:textAllCaps="false"
                android:textSize="18sp"
                android:lines="2"
                android:textAlignment="viewStart"
                android:paddingStart="32dp"
                android:textColor="@android:color/white"
                app:icon="@drawable/ic_agenda_white"
                app:iconTint="@android:color/white"
                app:iconSize="28dp"
                app:iconPadding="24dp"
                app:iconGravity="textStart"
                android:backgroundTint="#009688"
                app:cornerRadius="10dp"
                app:elevation="6dp"
                app:layout_constraintTop_toBottomOf="@id/btn_registrar_ponto"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="24dp"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_cadastrar_plano"
                style="@style/Widget.MaterialComponents.Button.Icon"
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:text="Cadastrar Plano"
                android:textAllCaps="false"
                android:textSize="18sp"
                android:lines="2"
                android:textAlignment="viewStart"
                android:paddingStart="32dp"
                android:textColor="@android:color/white"
                app:icon="@drawable/ic_file_white"
                app:iconTint="@android:color/white"
                app:iconSize="28dp"
                app:iconPadding="24dp"
                app:iconGravity="textStart"
                android:backgroundTint="#009688"
                app:cornerRadius="10dp"
                app:elevation="6dp"
                app:layout_constraintTop_toBottomOf="@id/btn_registrar_ocorrencia"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="16dp"
                app:layout_constraintBottom_toBottomOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>